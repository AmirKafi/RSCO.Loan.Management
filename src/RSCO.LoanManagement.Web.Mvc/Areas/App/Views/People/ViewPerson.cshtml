@using RSCO.LoanManagement.Web.Areas.App.Startup
@using RSCO.LoanManagement.Web.Areas.App.Models.People
@model PersonViewModel
@using RSCO.LoanManagement.Web.TagHelpers
@{
ViewBag.CurrentPageName = AppPageNames.Common.People;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/People/CreateOrEdit.js" asp-append-version="true"></script>
}

@{
var breadcrumbs = new List<BreadcrumbItem>()
    {
    new BreadcrumbItem("/App/People", L("People")),
    new BreadcrumbItem(L("Details")),
    };
    }
    <abp-page-subheader title='@L("Details")' breadcrumbs="breadcrumbs">
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class=" card card-custom gutter-b">
            <div class=" card-body">
                <div id="PersonInformationsTab">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <h6>@L("FirstName") :</h6>
                            @Model.Person.FirstName
                        </div>
                        <div class="col-6 mb-3">
                            <h6>@L("LastName") :</h6>
                            @Model.Person.LastName
                        </div>

                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="mb-3">@L("Borrower")</h5>
                            <div class="row">
                                @if (Model.BorrowerLoanContracts != null && Model.BorrowerLoanContracts.Any())
                                {
                                    foreach (var lc in Model.BorrowerLoanContracts)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <div class="fw-bold">@L("ContractDate"): @lc.ContractDate.ToString("d")</div>
                                                    <div class="text-muted">@L("Amount"): @lc.Amount</div>
                                                    <div class="mt-2">@lc.Summery</div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12 text-muted">—</div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="mb-3">@L("Guarantors")</h5>
                            <div class="row">
                                @if (Model.GuarantorLoanContracts != null && Model.GuarantorLoanContracts.Any())
                                {
                                    foreach (var lc in Model.GuarantorLoanContracts)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <div class="fw-bold">@L("ContractDate"): @lc.ContractDate.ToString("d")</div>
                                                    <div class="text-muted">@L("Amount"): @lc.Amount</div>
                                                    <div class="mt-2">@lc.Summery</div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12 text-muted">—</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
